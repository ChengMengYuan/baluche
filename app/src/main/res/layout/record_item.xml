<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorContent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/record_plate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="赣A78164" />

                <TextView
                    android:id="@+id/record_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/record_plate_number"
                    android:layout_alignTop="@+id/record_plate_number"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="交易时间："/>

                <TextView
                    android:id="@+id/record_time_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/record_time"
                    android:layout_alignTop="@+id/record_time"
                    android:textColor="#000000"
                    android:text="2018-02-27 13:00:20"/>

                <TextView
                    android:id="@+id/record_park"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/record_time"
                    android:layout_alignTop="@+id/record_time"
                    android:layout_marginTop="21dp"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:text="停车场："/>

                <TextView
                    android:id="@+id/record_park_space"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/record_park"
                    android:layout_alignTop="@+id/record_park"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:text="红谷凯旋南区地下停车场"/>

                <TextView
                    android:id="@+id/record_price_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="42dp"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/record_price_number"
                    android:layout_alignTop="@+id/record_price_number"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="￥"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/record_price_number"
                    android:layout_alignTop="@+id/record_price_number"
                    android:layout_marginTop="24dp"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:text="交易成功"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="99dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="9dp"
                android:src="@drawable/balance_pay"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>