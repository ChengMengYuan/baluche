<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/qiandao">

            <android.support.v7.widget.Toolbar
                android:id="@+id/sign_toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/left_white" />

                    <RelativeLayout
                        android:id="@+id/sign_return_left"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="每日签到"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


            <TextView
                android:id="@+id/sign_num"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sign_num"
                android:layout_toEndOf="@+id/sign_num"
                android:gravity="center"
                android:text="天"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sign_bt"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="46dp"
                android:background="@drawable/strock_button"
                android:text="点击签到"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/reward_record">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:text="奖励记录"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="67dp"
                    android:src="@drawable/reward_record_pic" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sign_time">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                android:text="签到记录"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignEnd="@+id/round_7"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-18dp"
                    android:src="@drawable/giftbox_sevendays" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignEnd="@+id/round_4"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-12dp"
                    android:src="@drawable/giftbox" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignEnd="@+id/round_2"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-12dp"
                    android:src="@drawable/giftbox" />

                <ImageView
                    android:id="@+id/round_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="28dp"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_1"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_1"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_2"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/line_1"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_2"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_3"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/line_2"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_3"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_4"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/line_3"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_4"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_5"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/line_4"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_5"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_6"
                    android:layout_width="51dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/line_5"
                    android:src="@drawable/line_heise" />

                <ImageView
                    android:id="@+id/round_7"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_toEndOf="@+id/round_6"
                    android:src="@drawable/rounded_heise" />

                <ImageView
                    android:id="@+id/line_7"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/line_6"
                    android:src="@drawable/line_heise" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_1"
                    android:gravity="center"
                    android:text="1天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imageView"
                    android:gravity="center"
                    android:text="2天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_3"
                    android:gravity="center"
                    android:text="3天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_4"
                    android:gravity="center"
                    android:text="4天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_5"
                    android:gravity="center"
                    android:text="5天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_6"
                    android:gravity="center"
                    android:text="6天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/line_7"
                    android:gravity="center"
                    android:text="7天"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef">

            <RelativeLayout
                android:layout_width="345dp"
                android:layout_height="197dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/whitecase_bg">

                <TextView
                    android:id="@+id/sign_use_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:text="签到说明"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@+id/sign_use_information"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/green_point"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:text="连续签到2天得随机立减券；"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/green_point"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:text="连续签到2天得随机立减券；"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/green_point"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:text="连续签到2天得随机立减券(最高抵3元）；"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/green_point"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:text="连续签到2天得随机立减券；"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/green_point"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:text="连续签到2天得随机立减券；"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


</FrameLayout>