<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="469dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/left_black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="选择付款方式"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"></LinearLayout>

    <RelativeLayout
        android:id="@+id/pay_ways_choose_weixin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/pay_ways_wechat_ic"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/wechat"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pay_ways_wechat_ic"
            android:layout_marginLeft="8dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="微信支付"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/choose_true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#efefef"/>

    <RelativeLayout
        android:id="@+id/pay_ways_choose_alipay"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/pay_ways_alipay_ic"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/alipay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pay_ways_alipay_ic"
            android:layout_marginLeft="13dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="支付宝"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/choose_true"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#efefef"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/pay_dialog_sure_btn"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape"
            android:textColor="#f3f3f3"
            android:textSize="15dp"
            android:text="立即支付"/>

    </RelativeLayout>
</LinearLayout>