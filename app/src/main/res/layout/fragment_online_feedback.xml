<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp">
        
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="183dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/whitecase_bg"
            android:orientation="horizontal">
            
            <RelativeLayout
                android:layout_width="172dp"
                android:layout_height="match_parent">
                
                <ImageView
                    android:id="@+id/online_order_feedback"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/online_order_feedback"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="115dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="订单反馈"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="74dp"
                android:layout_marginTop="55dp"
                android:background="#bcbcbc">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="172dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/online_feedback_suggestion"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/online_feedback_suggestion"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="115dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="投诉建议"/>

            </RelativeLayout>
        </LinearLayout>
        
    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="199dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/whitecase_bg"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:text="我的反馈结果"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:text="订单问题"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:text="停车场问题"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:text="投诉建议"/>

            </RelativeLayout>

        </LinearLayout>
        
    </RelativeLayout>
</LinearLayout>